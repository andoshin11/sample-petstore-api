{
  "compilerOptions": {
    "declaration": true,
    "sourceMap": true,
    "removeComments": false,
    "module": "commonjs",
    "target": "es5",
    "strict": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitThis": true,
    "outDir": "lib"
  },
  "include": ["index.ts"],
  "exclude": ["node_modules"]
}
